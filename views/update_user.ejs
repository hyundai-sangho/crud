<!-- include header -->
<%- include('include/_header') %>
<!-- include header -->

<!-- Main Site -->
<main id="site-main">
  <div class="container">
    <div class="box-nav d-flex-justify-between">
      <div class="filter">
        <a href="/"><i class="fas fa-angle-double-left"></i> 모든 사용자</a>
      </div>
    </div>
    <div class="form-title text-center">
      <h2 class="text-dark">사용자 업데이트</h2>
      <span class="text-light">아래 양식을 사용하여 계정을 업데이트 합니다.</span>
    </div>

    <!-- add user form -->
    <form method="POST" id="update_user">
      <div class="new_user">
        <div class="form-group">
          <label for="name" class="text-light">이름</label>
          <input type="hidden" name="id" value="<%= user._id %>">
          <input type="text" name="name" value="<%= user.name %>" placeholder="조상호">
        </div>
        <div class="form-group">
          <label for="Email" class="text-light">이메일</label>
          <input type="text" name="email" value="<%= user.email %>" placeholder="cho@naver.com">
        </div>
        <div class="form-group">
          <label for="gender" class="text-light">성별</label>
          <div class="radio inline">
            <input type="radio" id="radio-2" name="gender" value="Male" <%= user.gender == 'Male' ? 'checked' : '' %>>
            <label for="radio-2" class="radio-label">남자</label>
          </div>
          <div class="radio inline">
            <input type="radio" id="radio-3" name="gender" value="Female" <%= user.gender == 'Female' ? 'checked' : '' %>>
            <label for="radio-3" class="radio-label">여자</label>
          </div>
        </div>
        <div class="form-group">
          <label for="gender" class="text-light">상태</label>
          <div class="radio inline">
            <input type="radio" id="radio-4" name="status" value="Active" <%= user.status == 'Active' ? 'checked' : '' %>>
            <label for="radio-4" class="radio-label">활성</label>
          </div>
          <div class="radio inline">
            <input type="radio" id="radio-5" name="status" value="Inactive" <%= user.status == 'Inactive' ? 'checked' : '' %>>
            <label for="radio-5" class="radio-label">비활성</label>
          </div>
        </div>

        <div class="form-group">
          <button type="submit" class="btn text-dark update">저장</button>
        </div>
      </div>
    </form>

  </div>
</main>
<!-- Main Site -->

<!-- include footer -->
<%- include('include/_footer') %>
<!-- include footer -->