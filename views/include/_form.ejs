<form action="/api/users" method="POST" id="add_user">
  <div class="new_user">
    <div class="form-group">
      <label for="name" class="text-light">이름</label>
      <input type="hidden" name="id" value="">
      <input type="text" name="name" value="" placeholder="Mark Stoenis">
    </div>
    <div class="form-group">
      <label for="Email" class="text-light">이메일</label>
      <input type="text" name="email" value="" placeholder="example@gmail.com">
    </div>
    <div class="form-group">
      <label for="gender" class="text-light">성별</label>
      <div class="radio inline">
        <input type="radio" id="radio-2" name="gender" value="Male">
        <label for="radio-2" class="radio-label">남자</label>
      </div>
      <div class="radio inline">
        <input type="radio" id="radio-3" name="gender" value="Female">
        <label for="radio-3" class="radio-label">여자</label>
      </div>
    </div>
    <div class="form-group">
      <label for="gender" class="text-light">상태</label>
      <div class="radio inline">
        <input type="radio" id="radio-4" name="status" value="Active">
        <label for="radio-4" class="radio-label">활성</label>
      </div>
      <div class="radio inline">
        <input type="radio" id="radio-5" name="status" value="Inactive">
        <label for="radio-5" class="radio-label">비활성</label>
      </div>
    </div>

    <div class="form-group">
      <button type="submit" class="btn text-dark update">저장</button>
    </div>
  </div>
</form>